<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NgalauTalagoActivity"
    android:background="@color/primaryColor">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:id="@+id/back6"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ngalau"
        android:layout_below="@id/back6"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ngalau"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_detail_lokasi_ngalau_talago_silokek"
        android:textSize="18dp"
        android:layout_below="@+id/ngalau"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linknt"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/deskts"
        android:layout_below="@id/linknt"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:id="@+id/desknt"/>

</RelativeLayout>